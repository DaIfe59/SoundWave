<Window x:Class="SoundWaveWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoundWaveWPF"
        mc:Ignorable="d"
        Title="SoundWave - Музыкальный стриминговый сервис" Height="600" Width="1000">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="SoundWave" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0 0 0 20"/>
        
        <!-- Search Section -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 0 0 20">
            <TextBox x:Name="TxtSearch" Width="300" Height="32" 
                     VerticalContentAlignment="Center" Margin="0 0 10 0"
                     Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"/>
            <Button x:Name="BtnSearch" Width="100" Height="32" 
                    Click="BtnSearch_Click" Content="Поиск"/>
            <Button x:Name="BtnStatus" Width="100" Height="32" 
                    Click="BtnStatus_Click" Content="Статус" Margin="10 0 0 0"/>
        </StackPanel>
        
        <!-- Main Content -->
        <TabControl Grid.Row="2" x:Name="MainTabControl">
            <TabItem Header="Треки">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <ListView x:Name="LstTracks" Grid.Row="0" 
                              ItemsSource="{Binding Tracks}"
                              SelectionChanged="LstTracks_SelectionChanged">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Название" Width="200" DisplayMemberBinding="{Binding Title}"/>
                                <GridViewColumn Header="Исполнитель" Width="150" DisplayMemberBinding="{Binding Artist}"/>
                                <GridViewColumn Header="Альбом" Width="150" DisplayMemberBinding="{Binding Album}"/>
                                <GridViewColumn Header="Длительность" Width="100" DisplayMemberBinding="{Binding DurationSeconds}"/>
                                <GridViewColumn Header="Формат" Width="80" DisplayMemberBinding="{Binding AudioFormat}"/>
                                <GridViewColumn Header="Битрейт" Width="80" DisplayMemberBinding="{Binding Bitrate}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 10 0 0">
                        <Button x:Name="BtnAddToPlaylist" Width="150" Height="32" 
                                Click="BtnAddToPlaylist_Click" Content="Добавить в плейлист" 
                                IsEnabled="False"/>
                        <Button x:Name="BtnPlay" Width="100" Height="32" 
                                Click="BtnPlay_Click" Content="Воспроизвести" 
                                IsEnabled="False" Margin="10 0 0 0"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <TabItem Header="Плейлисты">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 10">
                        <TextBox x:Name="TxtPlaylistName" Width="200" Height="32" 
                                 VerticalContentAlignment="Center" Margin="0 0 10 0"
                                 Text="{Binding NewPlaylistName}"/>
                        <Button x:Name="BtnCreatePlaylist" Width="120" Height="32" 
                                Click="BtnCreatePlaylist_Click" Content="Создать плейлист"/>
                    </StackPanel>
                    
                    <ListView x:Name="LstPlaylists" Grid.Row="1" 
                              ItemsSource="{Binding Playlists}"
                              SelectionChanged="LstPlaylists_SelectionChanged">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Название" Width="200" DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="Описание" Width="300" DisplayMemberBinding="{Binding Description}"/>
                                <GridViewColumn Header="Треков" Width="100" DisplayMemberBinding="{Binding Tracks.Count}"/>
                                <GridViewColumn Header="Создан" Width="120" DisplayMemberBinding="{Binding CreatedAt, StringFormat={}{0:dd.MM.yyyy}}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 10 0 0">
                        <Button x:Name="BtnDeletePlaylist" Width="120" Height="32" 
                                Click="BtnDeletePlaylist_Click" Content="Удалить" 
                                IsEnabled="False"/>
                        <Button x:Name="BtnViewPlaylist" Width="120" Height="32" 
                                Click="BtnViewPlaylist_Click" Content="Просмотр" 
                                IsEnabled="False" Margin="10 0 0 0"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <TabItem Header="Загрузка">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Margin="0 0 0 20">
                        <TextBlock Text="Загрузка аудиофайлов" FontSize="16" FontWeight="Bold" Margin="0 0 0 10"/>
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="BtnSelectFiles" Width="150" Height="32" 
                                    Click="BtnSelectFiles_Click" Content="Выбрать файлы"/>
                            <Button x:Name="BtnUploadFiles" Width="120" Height="32" 
                                    Click="BtnUploadFiles_Click" Content="Загрузить" 
                                    IsEnabled="False" Margin="10 0 0 0"/>
                            <Button x:Name="BtnClearFiles" Width="100" Height="32" 
                                    Click="BtnClearFiles_Click" Content="Очистить" 
                                    IsEnabled="False" Margin="10 0 0 0"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <ListView x:Name="LstSelectedFiles" Grid.Row="1" 
                              ItemsSource="{Binding SelectedFiles}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Имя файла" Width="300" DisplayMemberBinding="{Binding FileName}"/>
                                <GridViewColumn Header="Размер" Width="100" DisplayMemberBinding="{Binding FileSize}"/>
                                <GridViewColumn Header="Статус" Width="150" DisplayMemberBinding="{Binding Status}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    
                    <ProgressBar x:Name="UploadProgress" Grid.Row="2" Height="20" 
                                 Margin="0 10 0 0" Visibility="Collapsed"/>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Status Bar -->
        <TextBlock Grid.Row="3" x:Name="TxtStatus" Text="Готов" 
                   Margin="0 10 0 0" Foreground="Gray"/>
    </Grid>
</Window>
